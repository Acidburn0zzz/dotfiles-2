alias v='vim'
alias wget='wget -c'
alias x.nested='Xephyr -ac -br -noreset -host-cursor -screen 800x600'
alias ztup='setup'
alias zz='exit'

# gnupg
alias gpg.genkey='gpg --gen-key'
alias gpg.delete='gpg --delete-key'
