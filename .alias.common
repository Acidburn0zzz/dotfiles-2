[ -f /usr/local/bin/wcd ] && alias cd='. wcd'
[ -f /usr/local/bin/rm_ ] && { alias rm.rf='rm_ -f'; alias rm='rm_'; } || alias rm.rf='rm -rf'
[ -f /usr/bin/colormake ] && alias make='LANGUAGE=en CFLAGS="-g -Wall" colormake' || alias make='LANGUAGE=en CFLAGS="-g -Wall" make'
[ -f /usr/local/bin/vw ] && alias feh='vw'
[ -f /usr/local/bin/simple.server ] || alias simple.server='sudo python -m SimpleHTTPServer'

# ===aliases=== $(sort -k 2)
alias barstatus.off='killall conky dzen2 > /dev/null 2>&1'
alias barstatus.on='barstatus.off; (conky | $HOME/code/dzen/dzen2  -x 350 -y 749 -fn Inconsolata:size=9 -ta r -fg "#999999" -bg "#000000" &) 2> /dev/null'
alias .bashrc='$EDITOR $HOME/.bashrc'
alias bbc='echo "Select a station:";select s in 1 1x 2 3 4 5 6 7 "Asian Network an" "Nations & Local lcl";do break;done;mplayer -playlist "http://www.bbc.co.uk/radio/listen/live/r"$(echo "$s"|awk '\''{print $NF}'\'')".asx"'
alias beep='echo -e "\007\c"'
alias c='cd'
alias cc='LANGUAGE=en cc'
alias ..='cd ..'
alias ....='cd ../..'
alias cd-='cd -'
alias cd..='cd ..'
alias cls='clear'
alias cp='cp -v'
alias dmesg.tail='dmesg|tail'
alias e='extract'
alias .et='vim ~/.bash_eternal_history'
alias fu-search="fu-search -c"
alias gcc='LANGUAGE=en gcc'
alias g='git'
alias g.fast='git clone --dept=1'
alias git.fast='git clone --dept=1'
alias irssi='irssi --config=<(gpg -d $HOME/.irssi/config.gpg)'
alias key.lookup='xev'
alias less.color='less -R'
alias match='join'
alias mkdir='mkdir -vp'
alias mv='mv -v'
alias otf2ttf='fontforge -script /usr/local/bin/otf_ttf'
