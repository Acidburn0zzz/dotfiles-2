# $Win+Enter starts a new terminal
bind $Win+36 exec /usr/bin/x-terminal-emulator

# Control+Shift*f starts firefox
bind Control+Shift+41 exec /usr/bin/firefox

# Control+Shift+k kills the current client
bind Control+Shift+45 kill

# $Alt+Esc starts dmenu and launches the selected application
# for now, we don’t have an own launcher
bind $Alt+9 exec /usr/bin/dmenu_run

# $Win+Shift+e exits i3
bind $Win+Shift+26 exit

# $Win+Shift+r restarts i3 inplace
bind $Win+Shift+27 restart

