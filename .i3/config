# This configuration uses Mod1 and Mod3. Make sure they are mapped properly using xev(1)
# and xmodmap(1). Usually, Mod1 is Alt (Alt_L) and Mod3 is Windows (Super_L)

# Tell i3 about your preferred terminal. You can refer to this as $terminal
# later. It is recommended to set this option to allow i3 to open a terminal
# containing the introduction on first start.
terminal /usr/bin/x-terminal-emulator

# ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# ###################################
# ######## KEYBOARD BINDINGS ########
# ###################################

# Use Mouse+$Win to drag floating windows to their wanted position
floating_modifier $Win

# Fullscreen ($Win+f)
bind $Win+41 f

# Stacking ($Win+s)
bind $Win+39 s

# Tabbed ($Win+t)
bind $Win+28 T

# Default ($Win+d)
bind $Win+40 d

# Toggle tiling/floating of the current window ($Win+Shift+Space)
bind $Win+Shift+65 t

# Go into the tiling layer / floating layer, depending on whether
# the current window is tiling / floating ($Win+t)
bind $Win+28 focus ft

# Focus ($Win+h/j/k/l)
bind $Win+43 h
bind $Win+44 j
bind $Win+45 k
bind $Win+46 l
# (alternatively, you can use the cursor keys:)
bindsym $Win+Left h
bindsym $Win+Down j
bindsym $Win+Up k
bindsym $Win+Right l

# Focus Container ($Alt+h/j/k/l)
bind $Alt+43 wch
bind $Alt+44 wcj
bind $Alt+45 wck
bind $Alt+46 wcl

# Snap ($Win+Control+h/j/k/l)
bind $Win+Control+43 sh
bind $Win+Control+44 sj
bind $Win+Control+45 sk
bind $Win+Control+46 sl
# (alternatively, you can use the cursor keys:)
bindsym $Win+Control+Left h
bindsym $Win+Control+Down j
bindsym $Win+Control+Up k
bindsym $Win+Control+Right l

# Move ($Win+Shift+h/j/k/l)
bind $Win+Shift+43 mh
bind $Win+Shift+44 mj
bind $Win+Shift+45 mk
bind $Win+Shift+46 ml
# (alternatively, you can use the cursor keys:)
bindsym $Win+Shift+Left h
bindsym $Win+Shift+Down j
bindsym $Win+Shift+Up k
bindsym $Win+Shift+Right l

# Move Container (Mod3+Shift+h/j/k/l)
